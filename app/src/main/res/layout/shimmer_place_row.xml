<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/size_24"
    android:paddingStart="@dimen/size_24"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmerCard01"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/size_12"
        android:layout_marginTop="@dimen/size_36"
        android:elevation="@dimen/size_16"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_16"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/viewCard01"
                android:layout_width="@dimen/size_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_error_generic"
                android:background="@drawable/shimmer_background"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@null"
                android:layout_height="@dimen/size_48"
                />

            <TextView
                android:id="@+id/textCard01"
                android:layout_width="@dimen/size_0"
                android:layout_marginStart="@dimen/size_16"
                android:background="@drawable/shimmer_background"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewCard01"
                app:layout_constraintTop_toTopOf="@+id/viewCard01" />

            <TextView
                android:id="@+id/textSubCard01"
                android:layout_width="@dimen/size_0"
                style="@style/SubTitle_Row"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shimmer_background"
                android:layout_marginStart="@dimen/size_16"
                app:layout_constraintBottom_toBottomOf="@+id/viewCard01"
                app:layout_constraintTop_toBottomOf="@+id/textCard01"
                app:layout_constraintStart_toEndOf="@+id/viewCard01" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmerCard02"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerCard01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/size_12"
        android:elevation="@dimen/size_16"
        android:layout_marginTop="@dimen/size_24"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_16"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/viewCard02"
                android:layout_width="@dimen/size_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_error_generic"
                android:background="@drawable/shimmer_background"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@null"
                android:layout_height="@dimen/size_48"
                />

            <TextView
                android:id="@+id/textCard02"
                android:layout_width="@dimen/size_0"
                android:layout_marginStart="@dimen/size_16"
                android:background="@drawable/shimmer_background"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewCard02"
                app:layout_constraintTop_toTopOf="@+id/viewCard02" />

            <TextView
                android:id="@+id/textSubCard02"
                android:layout_width="@dimen/size_0"
                style="@style/SubTitle_Row"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shimmer_background"
                android:layout_marginStart="@dimen/size_16"
                app:layout_constraintBottom_toBottomOf="@+id/viewCard02"
                app:layout_constraintTop_toBottomOf="@+id/textCard02"
                app:layout_constraintStart_toEndOf="@+id/viewCard02" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmerCard03"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerCard02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/size_12"
        android:elevation="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_12"
        android:layout_marginTop="@dimen/size_24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_16"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/viewCard03"
                android:layout_width="@dimen/size_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_error_generic"
                android:background="@drawable/shimmer_background"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@null"
                android:layout_height="@dimen/size_48"
                />

            <TextView
                android:id="@+id/textCard03"
                android:layout_width="@dimen/size_0"
                android:layout_marginStart="@dimen/size_16"
                android:background="@drawable/shimmer_background"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewCard03"
                app:layout_constraintTop_toTopOf="@+id/viewCard03" />

            <TextView
                android:id="@+id/textSubCard03"
                android:layout_width="@dimen/size_0"
                style="@style/SubTitle_Row"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shimmer_background"
                android:layout_marginStart="@dimen/size_16"
                app:layout_constraintBottom_toBottomOf="@+id/viewCard03"
                app:layout_constraintTop_toBottomOf="@+id/textCard03"
                app:layout_constraintStart_toEndOf="@+id/viewCard03" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>