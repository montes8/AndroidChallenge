<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/size_12"
        android:elevation="@dimen/size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/size_12"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_16"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgRow"
                android:layout_width="@dimen/size_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_error_generic"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@null"
                android:layout_height="@dimen/size_48"
                />

            <TextView
                android:id="@+id/textRowName"
                android:layout_width="@dimen/size_0"
                android:layout_marginStart="@dimen/size_16"
                android:layout_height="wrap_content"
                style="@style/Title_Row"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgRow"
                app:layout_constraintTop_toTopOf="@+id/imgRow" />

            <TextView
                android:id="@+id/textRowZone"
                style="@style/SubTitle_Row"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginTop="@dimen/size_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgRow"
                app:layout_constraintTop_toBottomOf="@+id/textRowName" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>