<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/txtTitleHome"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:text="Bienvenido Ingrese el establecimiento que desea buscar "
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginEnd="@dimen/size_24"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginTop="@dimen/size_48"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.challenge.androidchallenge.component.EditSearchLayout
        android:layout_width="match_parent"
        android:id="@+id/editSearch"
        app:layout_constraintRight_toRightOf="parent"
        android:outlineSpotShadowColor="@color/purple_700"
        app:cardCornerRadius="@dimen/size_12"
        android:elevation="@dimen/size_12"
        android:layout_margin="@dimen/size_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleHome"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/size_16"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/editSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/size_0">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        tools:visibility="gone"
        android:padding="@dimen/size_48"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/size_0">

        <ImageView
            android:id="@+id/imgIconError"
            android:layout_width="match_parent"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/red"
            android:src="@drawable/ic_error_generic"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtMessageError"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgIconError"
            android:layout_marginTop="@dimen/size_16"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Lo sentimos ocurrio un error intentelo de nuevo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>